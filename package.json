{
  "name": "p3-remote-vert-teamup",
  "version": "0.0.1",
  "description": "",
  "homepage": "https://github.com/  (hit Enter to use an empty string)/p3-remote-vert-teamup#readme",
  "bugs": {
    "url": "https://github.com/  (hit Enter to use an empty string)/p3-remote-vert-teamup/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/  (hit Enter to use an empty string)/p3-remote-vert-teamup.git"
  },
  "workspaces": ["client", "server"],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "check": "biome check --error-on-warnings --no-errors-on-unmatched --staged . && npm run check-types --workspaces --if-present",
    "check:fix": "biome check --write --error-on-warnings --no-errors-on-unmatched --staged .",
    "clean": "node ./bin/clean",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:seed": "npm run db:seed --workspace=server",
    "dev": "concurrently -c green,yellow -t \"HH:mm:ss\" -p \"{name} {time}\" \"npm:dev:*\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "prepare": "git config core.hooksPath .git-hooks || true",
    "start": "npm run start --workspace=server",
    "test": "npm run test --workspaces --if-present"
  },
  "keywords": [],
  "author": "  (hit Enter to use an empty string)",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/jsonwebtoken": "^9.0.10",
    "concurrently": "^9.1.2",
    "validate-branch-name": "^1.3.2"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "argon2": "^0.44.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "react-hot-toast": "^2.6.0",
    "resend": "^6.9.1"
  }
}
